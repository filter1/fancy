extends ./layout.jade

block content
	#search-bar
		.row
			.input-group
				input(id="searchText", type="text", class="typeahead form-control input-lg" placeholder="Search")
				span.input-group-btn
						button(id="searchButton", class="btn btn-lg btn-default", type="button")
								i.glyphicon.glyphicon-search
		.row
			ol.breadcrumb
				li
					a(href='#' terms='')
						i.glyphicon.glyphicon-home
				li

	.row
		.col-md-6.col-md-push-6
			#vis
				h2.text-center Loading...
		.col-md-6.col-md-pull-6
			#accordion.panel-group(role="tablist", aria-multiselectable="true")
				.panel.panel-default#history
					.panel-heading#headingOne(role="tab")
						h4.panel-title
							a.collapsed(data-toggle="collapse", data-parent="#accordion", href="#collapseOne", aria-expanded="true", aria-controls="collapseOne") Navigation History
					#collapseOne.panel-collapse.collapse(role="tabpanel", aria-labelledby="headingOne")
						.list-group

				.panel.panel-default#details
					.panel-heading#headingTwo(role="tab")
						h4.panel-title
							a(data-toggle="collapse", data-parent="#accordion", href="#collapseTwo", aria-expanded="false", aria-controls="collapseTwo") Results 
								span.badge#numResults

					#collapseTwo.panel-collapse.collapse.in(role="tabpanel", aria-labelledby="headingTwo")
						ul.list-group
							//- .text-center <br> No results.<br><br>

block scripts
	script(type="text/javascript" src="scripts/fancy.js")
