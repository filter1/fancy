extends ./layout.jade

block content
  .row
    .col-md-4.col-md-offset-4
      if userName
        .text-center
          a(href='/') Start

      else
        form(action="/login", method="POST")
          .form-group
            label(for="userName")
            input.form-control(type="text", id="userName", placeholder="Enter Name", name="userName")
            input(id="hiddenHistory", type="hidden", name="history", value="")
          button.btn.btn-default.pull-right(type="submit") Submit
