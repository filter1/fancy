extends ./layout.jade

block content
	.row
		.col-md-4.col-md-offset-4
			if userName
				.text-center
					a(href='/') Start
			else
				form(action="/login", method="POST")
					.form-group
						label(for="login")
						input.form-control(type="text", id="login", placeholder="Enter Name", name="login")
					button.btn.btn-default.pull-right(type="submit") Submit
